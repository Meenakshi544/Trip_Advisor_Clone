<%= form_with model: hotel do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% hotel.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
    <% hotel.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :contact_email %><br>
    <%= form.text_field :contact_email %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image%>
  </div>

  <div class="my-2">
    <%= form.submit :class => 'btn btn-secondary'  %>
  </div>
<% end %>